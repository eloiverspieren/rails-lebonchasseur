<div class="navbar-lebonchasseur-home">
  <!-- Logo -->
    <div id="logo" >
      <%= link_to 'LeBonChasseur', "http://localhost:3000/" %>
    </div>

    <% if current_user %>
      <div id="deconnexion" >
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      </div>
    <% else %>
      <div id="connexion" >
        <%= link_to 'Sign in', new_user_session_path %>
      </div>
     <div id="fblogin" >
        <%= link_to 'Login with Facebook', user_facebook_omniauth_authorize_path %>
      </div>
    <%end%>

    <% if user_signed_in? && current_user.facebook_picture_url %>
      <div id="avatar_navbar" >
        <%= image_tag current_user.facebook_picture_url, height: 28, width: 28 %>
      </div>
    <% end %>


    <!-- Notification link-->
    <div id="mail" >
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
      </div>
    </div>

</div>



