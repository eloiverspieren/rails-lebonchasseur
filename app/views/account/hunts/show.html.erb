    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h2>About this property</h2>
        <p><%= @hunt.description %></p>
        <hr>
        <div class="row" id="hunt-data">
          <div class="col-xs-12 col-sm-2">
