


<div class="banner" style="background: url('https://hd.unsplash.com/photo-1430916273432-273c2db881a0');">
 <%= render "shared/navbar_home" %>
      <div class="col-xs-12 col-sm-8 col-md-10">
       <div class="title">
         <h1>Time to Hunt</h1>
         <h2>Le plaisir de la chasse à portée de main</h2>
         <br>
         <%= link_to "See our catalog", hunts_path, class: "btn btn-success" %>
     </div>
    </div>
</div>

<div class="logos">
  <div class="container text-center features">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'travellogo.png' %>
          <h2>Travel around the world</h2>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'meetlogo.png' %>
          <h2>Meet other hunters</h2>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'huntlogo.png' %>
          <h2>Grow your passion</h2>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'naturelogo.png' %>
          <h2>Enjoy the gifts of mother nature</h2>
        </div>
      </div>
    </div>
  </div>

<div class="banner_2" style="background: url('http://www.chasse-sologne.fr/uploads/images/bois.jpg');">
</div>



<div class="container_cards">
  <div class="row">
   <% @sample = @hunts.sample(9) %>
    <% @sample.each do |hunt| %>
    <div class="col-xs-12 col-sm-4">
      <div class="image">
        <%= cl_image_tag( hunt.photo,
      width: 375, height: 175, crop: :fill, radius: 5) %>
        <div class="card-category"><%= hunt.address %></div>
        <div class="card-description">
          <h2> <%= hunt.name %></h2>
          <p>Capacity <%= hunt.capacity %> guns</p>
          <p>Daily Price <%= hunt.day_price %> €</p>
        </div>
        <img src="https://media.licdn.com/mpr/mpr/shrinknp_200_200/AAEAAQAAAAAAAAleAAAAJGViOWI1MDRiLWNhMWUtNDVhYy1hNzA1LTQxZTEzNjdmMzhhZQ.jpg" alt="user" class="card-user avatar">
        <%= link_to '', hunt_path(hunt), class: "card-link"  %>
      </div>
    </div>
  <%end%>
      </div>
    </div>
  </div>
</div>


